template(name='goalModalForm')
  .modal(tabindex="-1" role="dialog" aria-labelledby="goalModalForm" aria-hidden="true" id="goal-form-modal")
    .modal-dialog
      .modal-content
        +autoForm(collection="Goals" id="goalModalForm" type=action role="form" doc=goal)
          .modal-header
            button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
            h4.modal-title Goal form
          .modal-body
            fieldset.form-horizontal
              +afQuickField template="bootstrap3-horizontal" label-class="col-sm-3" input-col-class="col-sm-9" name='title'
              +afQuickField template="bootstrap3-horizontal" label-class="col-sm-3" input-col-class="col-sm-9" name='description'
              .form-group
                label.col-sm-3.control-label Makes
                .col-sm-3
                  .input-group
                    +afFieldInput name='pctOfParentGoal' disabled=pctOfParentGoalDisabled
                    span.input-group-addon %
                  span.help-block {{afFieldMessage name='pctOfParentGoal'}}
                .col-sm-6
                  +afFieldInput name='parentGoalId' type="hidden"
                  p.form-control-static of {{parentGoal.title}}
              .form-group
                +afFieldLabel name='pctCompleted' class="col-sm-3 control-label"
                .col-sm-3
                  .input-group
                    +afFieldInput name='pctCompleted'
                    span.input-group-addon %
                  span.help-block {{afFieldMessage name='pctCompleted'}}
          .modal-footer
            +autoForm(id="goalModalForm" collection="Goals" type='remove' role="form" doc=goal style="display: inline;")
              input.btn.btn-danger.pull-left(type="submit" value="Delete")
            button.btn.btn-default(type="button" data-dismiss="modal") Cancel
            input.btn.btn-primary(type="submit" value="Save")
