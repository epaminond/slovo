template(name='goalForm')
  +autoForm(collection="Goals" id="goalForm" type=action template="bootstrap3-horizontal" role="form" doc=goal)
    fieldset
      +afQuickField template="bootstrap3-horizontal" label-class="col-sm-2" input-col-class="col-sm-10" name='title'
      +afQuickField template="bootstrap3-horizontal" label-class="col-sm-2" input-col-class="col-sm-10" name='description'
      .form-group
        .col-sm-2
          +afFieldLabel name='parentGoalId'
        .col-sm-7
          +afFieldInput name='parentGoalId' options=parentGoals
          span.help-block {{afFieldMessage name='parentGoalId'}}
        .col-sm-3
          .input-group
            +afFieldInput name='pctOfParentGoal' disabled=pctOfParentGoalDisabled
            span.input-group-addon %
          span.help-block {{afFieldMessage name='pctOfParentGoal'}}
      .form-group
        .col-sm-2
          +afFieldLabel name='pctCompleted'
        .col-sm-3
          .input-group
            +afFieldInput name='pctCompleted'
            span.input-group-addon %
          span.help-block {{afFieldMessage name='pctCompleted'}}
      .form-group
        .col-sm-offset-2.col-sm-10
          .progress.progress-striped.active
            .progress-bar.progress-bar-success#js-success-bar(role="progressbar"
              aria-valuemin="0" aria-valuemax="100" style="width: {{goal.pctCompleted}}%")
      .form-group
        .col-sm-offset-2.col-sm-10
          input.btn.btn-primary(type='submit' value='Submit')
