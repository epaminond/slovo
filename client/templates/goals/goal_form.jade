template(name='goalForm')
  form.form-horizontal(role="form")
    .form-group
      label.control-label.col-sm-2(for='title') Title
      .col-sm-10
        input.form-control(name='title' type='text' value='' placeholder='Name your goal')
    .form-group
      label.control-label.col-sm-2(for='description') Description
      .col-sm-10
        textarea.form-control(name='description' type='text' value='')
    .form-group
      .col-sm-offset-2.col-sm-10
        input.btn.btn-primary(type='submit' value='Submit')
